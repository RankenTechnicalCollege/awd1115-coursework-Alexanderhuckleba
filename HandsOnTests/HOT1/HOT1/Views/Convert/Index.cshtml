@model HOT1.Models.DistanceModel

<h1>Distance Converter</h1>

<form asp-action="Index" method="post" class="mt-3">
    <div class="form-floating mb-3">
        <input asp-for="Inches" class="form-control" placeholder="Distance in inches" />
        <label asp-for="Inches">Distance (inches)</label>
        <span asp-validation-for="Inches" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Convert</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
