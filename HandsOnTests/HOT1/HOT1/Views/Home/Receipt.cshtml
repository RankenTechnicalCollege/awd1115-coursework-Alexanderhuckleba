@model HOT1.Models.OrderModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Receipt";
}

<h2>Order Receipt</h2>

<p>Quantity: @Model.Quantity</p>
<p>Subtotal: @Model.Subtotal:C</p>
<p>Tax (8%): @Model.Tax:C</p>
<p>Total: @Model.Total:C</p>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p class="text-danger">@Model.ErrorMessage</p>
}

<a class="btn btn-secondary" href="/Order">Place Another Order</a>
