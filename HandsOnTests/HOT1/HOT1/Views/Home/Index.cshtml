@model HOT1.Models.OrderModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Order Form";
}

<h2>Order T-Shirts</h2>

<form asp-action="Index" method="post">
    <div class="form-floating mb-3">
        <input asp-for="Quantity" class="form-control" placeholder="Quantity" />
        <label asp-for="Quantity">Quantity</label>
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Quantity)</span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="DiscountCode" class="form-control" placeholder="Discount Code" />
        <label asp-for="DiscountCode">Discount Code (Optional)</label>
        <span class="text-danger">@Model.ErrorMessage</span>
    </div>
    <button type="submit" class="btn btn-primary">Calculate</button>
</form>
