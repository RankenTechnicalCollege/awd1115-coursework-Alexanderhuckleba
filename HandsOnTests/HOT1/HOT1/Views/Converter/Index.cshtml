@model HOT1.Models.DistanceModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Distance Converter";
}

<h2>Distance Converter</h2>

<form asp-action="Index" method="post">
    <div class="form-floating mb-3">
        <input asp-for="Inches" class="form-control" placeholder="Distance in inches" />
        <label asp-for="Inches">Distance in Inches</label>
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Inches)</span>
    </div>
    <button type="submit" class="btn btn-primary">Convert</button>
</form>
