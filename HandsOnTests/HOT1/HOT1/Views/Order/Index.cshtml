@model HOT1.Models.OrderModel

<h1>T-Shirt Order Form</h1>

<form asp-action="Index" method="post" class="mt-3">
    <div class="form-floating mb-3">
        <input asp-for="Quantity" class="form-control" placeholder="Quantity" />
        <label asp-for="Quantity">Quantity</label>
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="DiscountCode" class="form-control" placeholder="Discount Code (optional)" />
        <label asp-for="DiscountCode">Discount Code (optional)</label>
        <span asp-validation-for="DiscountCode" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Calculate</button>
</form>

@if (Model != null && Model.Quantity.HasValue)
{
    <hr />
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p class="text-danger">@Model.ErrorMessage</p>
    }

    <p>Subtotal: @Model.Subtotal:C</p>
    <p>Tax (8%): @Model.Tax:C</p>
    <p><strong>Total: @Model.Total:C</strong></p>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
