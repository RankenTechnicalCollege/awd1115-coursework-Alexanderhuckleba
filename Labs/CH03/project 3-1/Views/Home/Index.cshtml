@model project_3_1.Models.QuotationViewModel
@{
    ViewData["Title"] = "Price Quotation";
}

<header class="bg-primary text-white text-center p-3 mb-4">
    <h1><i class="fas fa-money-bill-wave"></i> Price Quotation</h1>
</header>

<div class="container">
    <form asp-action="Index" method="post">
        <div class="row mb-3">
            <div class="col-md-4">
                <label asp-for="Subtotal" class="form-label"></label>
                <input asp-for="Subtotal" class="form-control" />
            </div>
            <div class="col-md-4">
                <label asp-for="DiscountPercent" class="form-label"></label>
                <input asp-for="DiscountPercent" class="form-control" />
            </div>
            <div class="col-md-4 text-danger">
                <span asp-validation-for="Subtotal"></span><br />
                <span asp-validation-for="DiscountPercent"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <label>Discount Amount</label>
                <input class="form-control" value="@Model.DiscountAmount.ToString("C2")" readonly />
            </div>
            <div class="col-md-4">
                <label>Total</label>
                <input class="form-control" value="@Model.Total.ToString("C2")" readonly />
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Calculate</button>
        <a asp-action="Index" class="btn btn-primary">Clear</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
