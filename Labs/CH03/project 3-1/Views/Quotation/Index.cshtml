@model project_3_1.Models.QuotationViewModel
@{
    ViewData["Title"] = "Price Quotation";
}

<header class="bg-primary text-white text-center py-4 mb-4">
    <h1><i class="fas fa-money-bill-wave"></i> Price Quotation</h1>
</header>

<div class="container">
    <form asp-action="Index" method="post" class="row g-3">

        <div class="row align-items-center mb-3">
            <label class="col-sm-2 col-form-label" for="Subtotal">Subtotal:</label>
            <div class="col-sm-4">
                <input asp-for="Subtotal" class="form-control" />
            </div>
            <div class="col-sm-6 text-danger">
                <span asp-validation-for="Subtotal"></span>
            </div>
        </div>

        <div class="row align-items-center mb-3">
            <label class="col-sm-2 col-form-label" for="DiscountPercent">Discount %:</label>
            <div class="col-sm-4">
                <input asp-for="DiscountPercent" class="form-control" />
            </div>
            <div class="col-sm-6 text-danger">
                <span asp-validation-for="DiscountPercent"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Discount Amount:</label>
            <div class="col-sm-4">
                <input class="form-control" readonly value="@Model.DiscountAmount.ToString("C2")" />
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Total:</label>
            <div class="col-sm-4">
                <input class="form-control" readonly value="@Model.Total.ToString("C2")" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-6 offset-sm-2">
                <button type="submit" class="btn btn-primary me-2">Calculate</button>
                <a asp-action="Index" class="btn btn-primary">Clear</a>
            </div>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
