@model IEnumerable<Project3_1.Models.Quotation>
@{
    ViewData["Title"] = "Quotations";
}

<p><a asp-action="Create" class="btn btn-primary">Add Quotation</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Customer</th>
            <th>Products</th>
            <th>Subtotal</th>
            <th>Discount %</th>
            <th>Discount Amount</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var q in Model)
        {
            <tr>
                <td>@q.QuotationId</td>
                <td>@q.Customer?.CustomerName</td>
                <td>@string.Join(", ", q.QuotationProducts.Select(qp => qp.Product.ProductName))</td>
                <td>@q.Subtotal.ToString("C2")</td>
                <td>@q.DiscountPercent</td>
                <td>@q.DiscountAmount.ToString("C2")</td>
                <td>@q.Total.ToString("C2")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@q.QuotationId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@q.QuotationId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
