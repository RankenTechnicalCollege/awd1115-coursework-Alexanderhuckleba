@model FinalProjCH2.Models.Quotation

@{
    ViewData["Title"] = "Price Quotation";
}

<h2 class="mb-3">Price Quotation</h2>

<form asp-action="Index" method="post" class="w-50">
    <div class="form-group mb-3">
        <label asp-for="Subtotal" class="form-label">Subtotal:</label>
        <input asp-for="Subtotal" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="DiscountPercent" class="form-label">Discount Percent:</label>
        <input asp-for="DiscountPercent" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Calculate</button>
</form>

@if (Model != null && Model.Subtotal.HasValue)
{
    <hr />
    <h4>Results</h4>
    <p><strong>Discount Amount:</strong> @Model.DiscountAmount.ToString("C")</p>
    <p><strong>Total:</strong> @Model.Total.ToString("C")</p>
}
