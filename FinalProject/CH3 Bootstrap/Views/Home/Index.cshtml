@{
    ViewData["Title"] = "Home - FinalProjCH2";
}

<div class="text-center">
    <img src="~/images/logo.jpg" alt="Logo" class="img-fluid mb-4" style="max-width:200px;" />
    <h1 class="display-4">Welcome to FinalProjCH2</h1>
    <p class="lead">This is a sample ASP.NET Core MVC project demonstrating a custom theme, Bootstrap layout, and database-driven functionality.</p>
</div>

<div class="row mt-4">
    <div class="col-md-4">
        <h2>About</h2>
        <p>
            Learn more about this project, its purpose, and the features it includes.
            We are building a live, functional web application with responsive design and database integration.
        </p>
        <a class="btn btn-primary" asp-controller="Home" asp-action="About">Read More</a>
    </div>
    <div class="col-md-4">
        <h2>Services</h2>
        <p>
            Explore the functionality of the app. It will support CRUD operations, authentication, and mobile responsiveness.
        </p>
        <a class="btn btn-success" asp-controller="Home" asp-action="Services">View Services</a>
    </div>
    <div class="col-md-4">
        <h2>Contact</h2>
        <p>
            Need help or want to get in touch? Use the contact page to reach out to the project developer.
        </p>
        <a class="btn btn-info" asp-controller="Home" asp-action="Contact">Contact Us</a>
    </div>
</div>
